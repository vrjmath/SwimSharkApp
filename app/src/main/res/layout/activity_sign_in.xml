<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/swimapp_background_android_crop">

    <ProgressBar
        android:id="@+id/login_progress"
        style="?android:attr/progressBarStyleLarge"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:visibility="gone"
        />

    <ScrollView
        android:id="@+id/login_form"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    </ScrollView>

    <ImageView
        android:id="@+id/opaqueBackground"
        android:layout_width="318dp"
        android:layout_height="475dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/opac74" />
   <!-- <ImageView
        android:id="@+id/logo_signin"
        android:layout_width="174dp"
        android:layout_height="128dp"
        app:layout_constraintTop_toTopOf="@+id/opaqueBackground"
        app:srcCompat="@drawable/swim_shark_logo"
        tools:layout_editor_absoluteX="105dp" /> -->
    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="331dp"
        android:layout_marginEnd="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="128dp"
        android:fontFamily="@font/lucida_sans_demibold_roman"
        android:text="S W I M S H A R K"
        android:textColor="@color/LightBlue"
        android:textSize="30sp"
        app:layout_constraintBottom_toBottomOf="@+id/opaqueBackground"
        app:layout_constraintEnd_toEndOf="@+id/opaqueBackground"
        app:layout_constraintStart_toStartOf="@+id/opaqueBackground"
        app:layout_constraintTop_toTopOf="@+id/logo_signin" />
    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="309dp"
        android:layout_marginEnd="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="184dp"
        android:textColor="@color/LightBlue"
        android:textSize="20sp"
        app:fontFamily="@font/lucida_sans_demibold_roman"
        app:layout_constraintBottom_toBottomOf="@+id/opaqueBackground"
        app:layout_constraintEnd_toEndOf="@+id/opaqueBackground"
        app:layout_constraintStart_toStartOf="@+id/opaqueBackground"
        app:layout_constraintTop_toTopOf="@+id/logo_signin"
        tools:text="L O G  I N" />

    <android.support.design.widget.TextInputLayout
        android:id="@+id/teamNameSignIn"
        android:layout_width="250dp"
        android:layout_height="50dp"
        android:layout_marginBottom="267dp"
        android:layout_marginEnd="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="233dp"
        android:orientation="horizontal"
        android:visibility="visible"
        app:layout_constraintBottom_toBottomOf="@+id/opaqueBackground"
        app:layout_constraintEnd_toEndOf="@+id/opaqueBackground"
        app:layout_constraintStart_toStartOf="@+id/opaqueBackground"
        app:layout_constraintTop_toTopOf="@+id/logo_signin"
        app:layout_constraintVertical_bias="0.498">
        <AutoCompleteTextView
            android:id="@+id/inputTeamName"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:hint="E-mail"
            android:inputType="text"
            android:singleLine="false"
            android:textColor="@color/LightBlue"
            android:textSize="16dp" />
    </android.support.design.widget.TextInputLayout>

    <android.support.design.widget.TextInputLayout
        android:id="@+id/passwordSignUp"
        android:layout_width="250dp"
        android:layout_height="50dp"
        android:layout_marginBottom="193dp"
        android:layout_marginEnd="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginStart="8dp"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="@+id/opaqueBackground"
        app:layout_constraintEnd_toEndOf="@+id/opaqueBackground"
        app:layout_constraintStart_toStartOf="@+id/opaqueBackground"
        app:layout_constraintTop_toBottomOf="@+id/teamNameSignIn">
        <EditText
            android:id="@+id/inputPassword"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:hint="Password"
            android:inputType="textPassword"
            android:textColor="@color/LightBlue"
            android:textSize="16dp" />
    </android.support.design.widget.TextInputLayout>
    <Button
        android:id="@+id/email_sign_in_button"
        android:layout_width="75dp"
        android:layout_height="25dp"
        android:layout_marginBottom="150dp"
        android:layout_marginEnd="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginStart="8dp"
        android:background="@color/LightBlue"
        android:textColor="@color/SeaBlue"
        android:textSize="10dp"
        android:text="Log In"
        app:layout_constraintBottom_toBottomOf="@+id/opaqueBackground"
        app:layout_constraintEnd_toEndOf="@+id/opaqueBackground"
        app:layout_constraintStart_toStartOf="@+id/opaqueBackground"
        app:layout_constraintTop_toBottomOf="@+id/passwordSignUp"
         />

</android.support.constraint.ConstraintLayout>